<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="27.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="geniemoviesandgames.controller.adminMenuBarController">
   <children>
      <MenuBar prefHeight="27.0" prefWidth="700.0">
        <menus>
          <Menu mnemonicParsing="false" text="Account Control">
            <items>
                  <MenuItem mnemonicParsing="false" text="My Admin Account" />
                  <MenuItem mnemonicParsing="false" text="List Of Buyer" />
                  <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem mnemonicParsing="false" onAction="#switchToLogin" text="Log out" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Item Control">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#switchToGameList" text="Game" />
                  <MenuItem mnemonicParsing="false" onAction="#switchToDVDList" text="DVD" />
                  <MenuItem mnemonicParsing="false" onAction="#switchToOldMovieRecordList" text="Old Movie Record" />
                  <MenuItem mnemonicParsing="false" onAction="#switchToOutOfStockList" text="Out of Stock Items" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Administration">
            <items>
              <MenuItem mnemonicParsing="false" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </children>
</AnchorPane>
